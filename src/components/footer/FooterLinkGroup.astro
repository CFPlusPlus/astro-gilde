---
import type { FooterLink } from '../../data/footer';
import NavItem from '../nav/NavItem.astro';

interface Props {
  links: FooterLink[];
  ariaLabel?: string;
  class?: string;
  linkClass?: string;
}

const { links, ariaLabel = 'Footer', class: className, linkClass } = Astro.props;
---

<nav aria-label={ariaLabel} class={className}>
  {
    links.map((link) => (
      <NavItem href={link.href} external={link.external} class={linkClass}>
        {link.label}
      </NavItem>
    ))
  }
</nav>
