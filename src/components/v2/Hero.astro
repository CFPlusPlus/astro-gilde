---
import { ArrowRight, BarChart3, ShieldCheck, Sparkles } from '@lucide/astro';
import Button from './ui/Button.astro';
import Card from './ui/Card.astro';
import Badge from './ui/Badge.astro';

const DISCORD_URL = 'https://discord.minecraft-gilde.de';
---

<section class="mx-auto max-w-6xl px-4 pt-12 pb-8">
  <div class="grid items-center gap-10 md:grid-cols-2">
    <div>
      <div class="flex flex-wrap items-center gap-2">
        <Badge variant="accent">Gold accent</Badge>
        <Badge>Auto Light/Dark</Badge>
        <Badge>Subtle glass</Badge>
      </div>

      <h1 class="mt-5 text-4xl font-semibold tracking-tight sm:text-5xl">
        Minecraft, aber als Community.
      </h1>
      <p class="mt-4 text-base leading-relaxed text-muted sm:text-lg">
        Ein cleanes, modernes Zuhause für Abenteuer, Bauen und Events – mit klaren Regeln,
        Statistiken und einem aktiven Discord.
      </p>

      <div class="mt-6 flex flex-wrap gap-3">
        <Button href={DISCORD_URL} external variant="primary">
          Discord beitreten <ArrowRight size={18} />
        </Button>
        <Button href="/erststart" variant="secondary">
          Erststart
        </Button>
      </div>

      <div class="mt-8 flex flex-col gap-3 text-sm text-muted sm:flex-row sm:items-center sm:gap-6">
        <div class="inline-flex items-center gap-2">
          <ShieldCheck size={18} /> Moderiert & fair
        </div>
        <div class="inline-flex items-center gap-2">
          <BarChart3 size={18} /> Statistiken & Ranglisten
        </div>
        <div class="inline-flex items-center gap-2">
          <Sparkles size={18} /> Events & Features
        </div>
      </div>
    </div>

    <div class="grid gap-4">
      <Card class="p-5">
        <div class="flex items-start justify-between gap-3">
          <div>
            <h2 class="text-sm font-semibold">Server Status</h2>
            <p class="mt-1 text-sm text-muted">Anbindung kommt in v2.</p>
          </div>
          <Badge>Preview</Badge>
        </div>

        <div class="mt-4 grid grid-cols-2 gap-3 text-sm">
          <div class="rounded-lg border border-border bg-surface-solid/40 px-3 py-2">
            <div class="text-muted">Online</div>
            <div class="font-semibold text-fg">—</div>
          </div>
          <div class="rounded-lg border border-border bg-surface-solid/40 px-3 py-2">
            <div class="text-muted">Spieler</div>
            <div class="font-semibold text-fg">—</div>
          </div>
        </div>
      </Card>

      <Card class="p-5">
        <h2 class="text-sm font-semibold">Schnellzugriff</h2>
        <div class="mt-3 grid gap-2 sm:grid-cols-2">
          <a
            href="/serverinfos"
            class="rounded-lg border border-border bg-surface px-3 py-2 text-sm hover:bg-surface-solid/70 transition-colors"
          >
            Serverinfos
          </a>
          <a
            href="/rules"
            class="rounded-lg border border-border bg-surface px-3 py-2 text-sm hover:bg-surface-solid/70 transition-colors"
          >
            Regeln
          </a>
          <a
            href="/stats"
            class="rounded-lg border border-border bg-surface px-3 py-2 text-sm hover:bg-surface-solid/70 transition-colors"
          >
            Statistiken
          </a>
          <a
            href="/befehle"
            class="rounded-lg border border-border bg-surface px-3 py-2 text-sm hover:bg-surface-solid/70 transition-colors"
          >
            Befehle
          </a>
        </div>
      </Card>
    </div>
  </div>
</section>
