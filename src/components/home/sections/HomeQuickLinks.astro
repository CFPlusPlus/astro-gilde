---
import HomeSection from '../HomeSection.astro';
import LinkPill from '../../ui/LinkPill.astro';

import { minecraftGilde } from '../../../config/minecraftGilde';
import {
  BadgeCheck,
  Book,
  Handshake,
  HelpCircle,
  Map,
  ScrollText,
  Sparkles,
  TerminalSquare,
  Users,
} from '@lucide/astro';

const DYNMAP_URL = minecraftGilde.mapUrl;

type QuickLink = {
  href: string;
  label: string;
  external?: boolean;
  Icon: typeof ScrollText;
};

const LINKS: QuickLink[] = [
  { href: '/serverinfos/', label: 'Serverinfos', Icon: ScrollText },
  { href: '/regeln/', label: 'Regeln', Icon: Book },
  { href: '/befehle/', label: 'Befehle', Icon: TerminalSquare },
  { href: DYNMAP_URL, label: 'Karte', Icon: Map, external: true },
  { href: '/statistiken/', label: 'Statistiken', Icon: Sparkles },
  { href: '/voten/', label: 'Voten', Icon: BadgeCheck },
  { href: '/faq/', label: 'FAQ', Icon: HelpCircle },
  { href: '/team/', label: 'Team', Icon: Users },
  { href: '/partner/', label: 'Partner', Icon: Handshake },
];
---

<HomeSection id="links" size="normal">
  <div data-reveal>
    <h2 class="text-2xl font-semibold tracking-tight">Mehr entdecken</h2>
    <p class="text-muted mt-3 max-w-2xl text-sm">Die wichtigsten Seiten â€“ ohne Umwege.</p>
  </div>

  <div class="mt-8 flex flex-wrap gap-2" data-reveal data-reveal-delay="80">
    {
      LINKS.map(({ href, label, Icon, external }) => (
        <LinkPill href={href} external={external}>
          <span slot="icon">
            <Icon size={16} />
          </span>
          {label}
        </LinkPill>
      ))
    }
  </div>
</HomeSection>
