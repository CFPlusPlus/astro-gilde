---
import Button from '../../ui/Button.astro';
import IconBadge from '../../ui/IconBadge.astro';

import HomePanel from '../HomePanel.astro';
import HomeSection from '../HomeSection.astro';

import { ArrowRight, Cpu, Home, Map, Shield, Sparkles, Wand2 } from '@lucide/astro';

type Feature = {
  title: string;
  description: string;
  Icon: typeof Shield;
};

const FEATURES: Feature[] = [
  {
    title: 'Claims / Grief-Schutz',
    description: 'Sicher bauen: Dein Gebiet bleibt deins.',
    Icon: Shield,
  },
  {
    title: 'Farmwelten',
    description: 'Ressourcen farmen, ohne die Hauptwelt zu zerstören.',
    Icon: Map,
  },
  {
    title: 'Bis zu 20 Homes',
    description: 'Schnell zurück zu deinen Projekten – ohne Laufwege.',
    Icon: Home,
  },
  {
    title: '/RTP',
    description: 'In Sekunden einen Spot finden und loslegen.',
    Icon: Wand2,
  },
  {
    title: 'Quality-of-Life',
    description: 'Komfort ja – aber kein modded Overkill.',
    Icon: Sparkles,
  },
  {
    title: 'Stabil & performant',
    description: 'Flüssig spielen – auch wenn mehr los ist.',
    Icon: Cpu,
  },
];
---

<HomeSection id="vanilla" size="normal">
  <div class="relative">
    <div
      class="bg-accent/6 pointer-events-none absolute -inset-x-6 -top-8 -bottom-8 -z-10 rounded-[32px] blur-2xl"
      aria-hidden="true"
    >
    </div>

    <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between" data-reveal>
      <div>
        <h2 class="text-3xl font-semibold tracking-tight">Vanilla+ – genau das richtige Maß</h2>
        <p class="text-muted mt-3 max-w-2xl">
          Komfortfunktionen, die helfen – ohne das Survival-Gefühl zu verlieren.
        </p>
      </div>
      <Button href="/tutorial" variant="secondary" class="gap-2">
        Tutorial ansehen <ArrowRight size={18} />
      </Button>
    </div>

    <HomePanel variant="soft" class="mt-10 p-6 sm:p-8" data-reveal data-reveal-delay="100">
      <div class="grid gap-7 md:grid-cols-2">
        {
          FEATURES.map(({ title, description, Icon }) => (
            <div class="flex gap-4">
              <IconBadge variant="outline" size="md">
                <Icon size={18} />
              </IconBadge>
              <div>
                <h3 class="text-base font-semibold">{title}</h3>
                <p class="text-muted mt-1 text-sm">{description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </HomePanel>
  </div>
</HomeSection>
