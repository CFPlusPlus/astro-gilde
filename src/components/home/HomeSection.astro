---
export type HomeSectionSize = 'tight' | 'normal' | 'loose';

export interface Props {
  /** Optionales Anker-Target (für Onepager-Navigation) */
  id?: string;
  /** Zusätzliche Klassen für das <section> */
  class?: string;
  /** Zusätzliche Klassen für den Container */
  containerClass?: string;
  /** Optionaler Trenner (Border oben) */
  divider?: boolean;
  /** Vertikales Spacing-Preset */
  size?: HomeSectionSize;
}

const {
  id,
  class: className = '',
  containerClass = '',
  divider = false,
  size = 'normal',
  ...rest
} = Astro.props as Props & Record<string, any>;

const sizes: Record<HomeSectionSize, string> = {
  // Mehr „Luft“: größere Default-Abstände, damit die Startseite ruhiger wirkt.
  tight: 'py-14 sm:py-16',
  normal: 'py-24 sm:py-28 lg:py-32',
  loose: 'py-28 sm:py-32 lg:py-36',
};

const sectionClass = `${divider ? 'border-border border-t' : ''} ${className}`.trim();
const container = `${sizes[size]} ${containerClass}`.trim();
---

<section id={id} class={sectionClass} data-section {...rest}>
  <div class={`mg-container ${container}`.trim()}>
    <slot />
  </div>
</section>
