---
import { hrefFor } from '../../lib/links';

interface Props {
  href: string;
  external?: boolean;
  class?: string;
  ariaLabel?: string;
  ariaCurrent?: 'page';
  showExternalHint?: boolean;
}

const {
  href,
  external = false,
  class: className,
  ariaLabel,
  ariaCurrent,
  showExternalHint = true,
} = Astro.props;
---

<a
  href={hrefFor(href)}
  target={external ? '_blank' : undefined}
  rel={external ? 'noopener noreferrer' : undefined}
  aria-label={ariaLabel}
  aria-current={ariaCurrent}
  class={className}
>
  <slot />
  {external && showExternalHint ? <span class="sr-only"> (extern)</span> : null}
</a>
