---
import { hrefFor, isExternalHref } from '../../lib/links';

export type ButtonVariant = 'primary' | 'secondary' | 'ghost';
export type ButtonSize = 'sm' | 'md';

export interface Props {
  href?: string;
  external?: boolean;
  variant?: ButtonVariant;
  size?: ButtonSize;
  class?: string;
  type?: 'button' | 'submit' | 'reset';
}

const {
  href,
  external = false,
  variant = 'secondary',
  size = 'md',
  class: className = '',
  type = 'button',
  ...rest
} = Astro.props as Props & Record<string, unknown>;

const resolvedHref = href ? hrefFor(href) : undefined;
const resolvedExternal = external || (href ? isExternalHref(href) : false);

const base =
  'inline-flex items-center justify-center gap-2 rounded-lg font-semibold transition-colors focus-visible:ring-2 focus-visible:ring-[color:var(--ring)] focus-visible:ring-offset-2 focus-visible:ring-offset-bg';

const sizes: Record<ButtonSize, string> = {
  sm: 'h-9 px-3 text-sm',
  md: 'h-10 px-4 text-sm',
};

const secondary =
  'bg-transparent border border-accent/60 text-fg hover:bg-[var(--accent-soft)] hover:border-accent';
const ghost = 'bg-transparent text-fg/85 hover:bg-[var(--accent-soft)] hover:text-fg';

// Semantik: primary = Hauptaktion, secondary = gleichwertige Alternative, ghost = unaufdringliche Nebenaktion.
const variants: Record<ButtonVariant, string> = {
  primary:
    'bg-accent text-black border border-accent hover:bg-[var(--accent-dark)] hover:border-[var(--accent-dark)]',
  secondary,
  ghost,
};

const attrs = href
  ? {
      href: resolvedHref,
      ...(resolvedExternal ? { target: '_blank', rel: 'noopener noreferrer' } : {}),
      ...rest,
    }
  : { type, ...rest };
---

{
  href ? (
    <a class={`${base} ${sizes[size]} ${variants[variant]} ${className}`.trim()} {...attrs}>
      <slot />
    </a>
  ) : (
    <button class={`${base} ${sizes[size]} ${variants[variant]} ${className}`.trim()} {...attrs}>
      <slot />
    </button>
  )
}
