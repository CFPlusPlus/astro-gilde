---
// v2 layout: Tailwind + local fonts + no Font Awesome
import '../styles/tailwind.css';
import '@fontsource-variable/geist';
import '@fontsource-variable/space-grotesk';

import Navbar from '../components/v2/Navbar.astro';
import Footer from '../components/v2/Footer.astro';

export interface Props {
  title?: string;
  canonical?: string;
  description?: string;
  bodyClass?: string;
  showNav?: boolean;
  showFooter?: boolean;
}

const {
  title = 'Minecraft Gilde',
  canonical,
  description,
  bodyClass = '',
  showNav = true,
  showFooter = true,
} = Astro.props as Props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="light dark" />

    {canonical ? <link rel="canonical" href={canonical} /> : null}
    {description ? <meta name="description" content={description} /> : null}

    <link rel="icon" href="/images/logo.webp" />
    <title>{title}</title>

    <slot name="head" />
  </head>

  <body class={`min-h-dvh bg-bg text-fg antialiased ${bodyClass}`.trim()}>
    <a
      href="#main"
      class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 rounded-lg bg-surface-solid px-3 py-2 text-sm font-medium text-fg border border-border"
    >
      Zum Inhalt springen
    </a>

    <div class="pointer-events-none fixed inset-0 -z-10 overflow-hidden">
      <div
        class="absolute left-1/2 top-[-14rem] h-[28rem] w-[28rem] -translate-x-1/2 rounded-full bg-accent/10 blur-3xl"
      ></div>
      <div
        class="absolute right-[-12rem] top-[10rem] h-[24rem] w-[24rem] rounded-full bg-accent/5 blur-3xl"
      ></div>
    </div>

    {showNav ? <Navbar /> : null}

    <main id="main">
      <slot />
    </main>

    {showFooter ? <Footer /> : null}
    <slot name="afterScripts" />
  </body>
</html>
